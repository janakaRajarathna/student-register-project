<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* ... existing styles ... */
        .logout-link {
            position: absolute;
            top: 1rem;
            right: 1rem;
            color: #dc3545;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .logout-link:hover {
            color: #c82333;
        }
    </style>
</head>

<body>

    <a href="/auth/logout" class="logout-link">Logout</a>

    <div class="dashboard-header">
        <h1>Student Dashboard</h1>
        <button onclick="location.href='/student/submit-assignment'" class="btn btn-primary">Submit
            Assignment</button>
    </div>

    <div class="container">
        <h2>Your Assignments</h2>
        <div class="assignments-grid" id="assignmentsList">
            <% if (assignments && assignments.length> 0) { %>
                <% assignments.forEach(assignment=> { %>
                    <div class="assignment-card">
                        <h3>
                            <%= assignment.title %>
                        </h3>
                        <p>Status: <%= assignment.status || 'Not Submitted' %>
                        </p>
                        <p>Grade: <%= assignment.grade ? assignment.grade + '/100' : 'Not Graded' %>
                        </p>
                        <p>Deadline: <%= new Date(assignment.deadline).toLocaleDateString() %>
                        </p>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No assignments found.</p>
                            <% } %>
        </div>

        <div style="margin-top: 40px;">
            <h2>Performance Chart</h2>
            <canvas id="performanceChart" style="max-width: 600px; margin-top: 20px;"></canvas>
        </div>
    </div>

    <script src="/js/student.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>

</html>