<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        /* ... existing styles ... */
        .logout-link {
            position: absolute;
            top: 1rem;
            right: 1rem;
            color: #dc3545;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .logout-link:hover {
            color: #c82333;
        }

        .assignment-card {
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            padding: 1rem;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .assignment-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .status-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-pending {
            background-color: #ffc107;
            color: #000;
        }

        .status-graded {
            background-color: #28a745;
            color: #fff;
        }

        .status-not-submitted {
            background-color: #dc3545;
            color: #fff;
        }
    </style>
</head>

<body>

    <a href="/auth/logout" class="logout-link">Logout</a>

    <div class="dashboard-header">
        <h1>Student Dashboard</h1>
        <button onclick="location.href='/student/submit-assignment'" class="btn btn-primary">Submit
            Assignment</button>
    </div>

    <div class="container">
        <h2>Your Assignments</h2>
        <div class="assignments-grid" id="assignmentsList">
            <% if (assignments && assignments.length > 0) { %>
                <% assignments.forEach(assignment => { %>
                    <div class="assignment-card" onclick="showSubmissionInfo('<%= assignment.submission_id || '' %>')">
                        <h3><%= assignment.title %></h3>
                        <p>Status: <span class="status-badge status-<%= (assignment.status || 'Not Submitted').toLowerCase() %>">
                            <%= assignment.status || 'Not Submitted' %>
                        </span></p>
                        <p>Grade: <%= assignment.grade ? assignment.grade + '/100' : 'Not Graded' %></p>
                        <p>Deadline: <%= new Date(assignment.deadline).toLocaleDateString() %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No assignments found.</p>
            <% } %>
        </div>

        <div style="margin-top: 40px;">
            <h2>Performance Chart</h2>
            <canvas id="performanceChart" style="max-width: 600px; margin-top: 20px;"></canvas>
        </div>
    </div>

    <!-- Submission Info Modal -->
    <div class="modal fade" id="submissionInfoModal" tabindex="-1" aria-labelledby="submissionInfoModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="submissionInfoModalLabel">Submission Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="filePreview" class="mb-3">
                        <!-- File preview will be loaded here -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/student.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/submission-info.js"></script>
</body>

</html>